{
    "servers": {
        "chronicle-mcp": {
            "type": "stdio",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/Source/Chronicle.MCP.csproj",
            ]
        },
        "Chronicle": {
            "type": "stdio",
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "cratis/chronicle-mcp"
            ],
            "env": {
                "Cratis__Chronicle__Mcp__ConnectionString": "chronicle://host.docker.internal:35000"
            }
        }
    }
}
